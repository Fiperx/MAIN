local v78=Instance.new("TextLabel")
v78.Size=UDim2.new(0.5, 0, 0.1, 0)
v78.Position=UDim2.new(0.25, 0, 0.9, 0)
v78.BackgroundColor3=Color3.fromRGB(0,0,0)
v78.Text="Thanks For Being A Tester!"
v78.TextColor3=Color3.fromRGB(255,255,0)
