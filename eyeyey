task.wait(5)
v78:Destroy()

local function findBall()
    return workspace:FindFirstChild("Football")
end

local function controlBall()
    v7=findBall()
    if not v7 then warn("No Ball Found!") return end
    v8=not v8
    v9=true
    v3.CameraSubject=(v8 and v7) or v5
    v21.Visible=v8
    v29.Visible=v8
    if v8 then
        local v92=Instance.new("BodyVelocity")
        v92.MaxForce=Vector3.new(100000, 500000, 500000)
        v92.Parent=v7
        v2.Heartbeat:Connect(function()
            if not v8 or not v7 or not v7.Parent then
                v92:Destroy()
                return
            end
            v92.Velocity=(v9 and (v3.CFrame.LookVector * v10)) or Vector3.new(0,0,0)
        end)
    end
end

local function stopBall()
    v9=not v9
    v21.BackgroundColor3=v9 and Color3.fromRGB(0, 255, 0) or Color3.fromRGB(255, 0, 0)
end

v1.InputBegan:Connect(function(v98)
    if v98.KeyCode==Enum.KeyCode.Z then
        v10=math.max(v10-10,10)
        v35.Text="Speed: " .. tostring(v10)
    elseif v98.KeyCode==Enum.KeyCode.X then
        v10=math.min(v10+10,350)
        v35.Text="Speed: " .. tostring(v10)
    end
end)

v1.InputBegan:Connect(function(v99,v100)
    if v100 then return end
    if v99.KeyCode==Enum.KeyCode.G then
        controlBall()
    elseif v99.KeyCode==Enum.KeyCode.F then
        stopBall()
    end
end)

v21.MouseButton1Click:Connect(stopBall)
v14.MouseButton1Click:Connect(controlBall)
